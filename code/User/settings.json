{
  "editor.linkedEditing": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.mouseWheelZoom": true,
  "[css]": {
    "editor.suggest.insertMode": "replace",
    "cSpell.fixSpellingWithRenameProvider": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "never"
  },
  "dart.previewFlutterUiGuides": true,
  "dart.previewFlutterUiGuidesCustomTracking": true,
  "tabnine.experimentalAutoImports": true,
  "workbench.editor.labelFormat": "short",
  "explorer.compactFolders": false,
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.semanticHighlighting.enabled": false,
  "editor.suggest.preview": true,
  "editor.renderWhitespace": "none",
  "editor.showFoldingControls": "never",
  "editor.renderLineHighlight": "none",
  "editor.matchBrackets": "never",
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "files.insertFinalNewline": true,
  "extensions.ignoreRecommendations": true,
  "errorLens.gutterIconsEnabled": false,
  "errorLens.statusBarColorsEnabled": true,
  "errorLens.statusBarMessageEnabled": true,
  "errorLens.statusBarMessageType": "closestSeverity",
  "errorLens.scrollbarHackEnabled": true,
  "errorLens.fontStyleItalic": true,
  "workbench.editor.showTabs": "none",
  "errorLens.messageBackgroundMode": "message",
  "conventionalCommits.lineBreak": "\\n",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.lintTask.enable": true,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "sonarlint.disableTelemetry": true,
  "editor.fontFamily": "Dank Mono, monospace",
  "editor.fontLigatures": true,
  "files.autoSave": "afterDelay",
  "console-ninja.featureSet": "Community",

  "security.workspace.trust.untrustedFiles": "open",

  "workbench.tips.enabled": false,
  "errorLens.excludeBySource": ["css(vendorPrefix)"],
  "powershell.integratedConsole.showOnStartup": false,
  "explorer.confirmDragAndDrop": false,
  "editor.inlineSuggest.enabled": true,
  "redhat.telemetry.enabled": false,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.allowChords": false,
  "[dart]": {
    "editor.formatOnType": true,
    "editor.rulers": [],
    "editor.selectionHighlight": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },
  "files.exclude": {
    "**/.DS_Store": false,
    "**/.git": false,
    "**/.hg": false,
    "**/.svn": false,
    "**/CVS": false,
    "**/Thumbs.db": false
  },

  "git.openRepositoryInParentFolders": "always",
  "git.enableSmartCommit": true,
  "dart.showTodos": false,
  "window.zoomLevel": 2,
  "update.mode": "manual",
  "dart.hotReloadOnSave": "all",
  "dart.flutterHotReloadOnSave": "all",
  "enableTelemetry": false,
  "cSpell.userWords": ["ARGB", "tabnine"],
  "cSpell.diagnosticLevel": "Hint",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "dart.previewCommitCharacters": true,
  "git.autofetch": true,

  //-----------------------------------------Custom UI section-----------------------------------//
  // this theme using apc customize ui++, doki-theme for status bar nickname, catppuccin frappé theme, catppuccin icons, custom css & js loader and vscode animation

  "workbench.colorCustomizations": {
    "editorWidget.background": "#1f2738bb",
    "editorHoverWidget.background": "#2d3750",
    "editorSuggestWidget.selectedBackground": "#69439f",
    "editor.lineHighlightBackground": "#3c465a70",
    "sideBar.background": "#313445",
    "sideBarSectionHeader.background": "#313445",
    "terminal.background": "#00000000",
    "terminalCursor.foreground": "#C45DFF",
    "editorLineNumber.activeForeground": "#8593a9",
    "editorLineNumber.dimmedForeground": "#586374",
    "editorLineNumber.foreground": "#58637466",
    "scrollbarSlider.activeBackground": "#6b6f87",
    "scrollbarSlider.background": "#6b6f87",
    "scrollbarSlider.hoverBackground": "#6b6f87",
    "sideBar.border": "#63697355",
    "editorOverviewRuler.border": "#0000",
    "editorOverviewRuler.findMatchForeground": "#fff4",
    "editorOverviewRuler.rangeHighlightForeground": "#0000",
    "editorOverviewRuler.selectionHighlightForeground": "#0000",
    "editorOverviewRuler.wordHighlightForeground": "#0000",
    "editorOverviewRuler.wordHighlightStrongForeground": "#0000",
    "editorOverviewRuler.modifiedForeground": "#0000",
    "editorOverviewRuler.addedForeground": "#0000",
    "editorOverviewRuler.deletedForeground": "#0000",
    "editorOverviewRuler.bracketMatchForeground": "#0000"
  },

  //theme catppuccin custom
  "workbench.colorTheme": "Catppuccin Frappé",
  "workbench.iconTheme": "catppuccin-frappe",
  "catppuccin-icons.hidesExplorerArrows": true,
  "workbench.preferredHighContrastLightColorTheme": "Catppuccin Frappé",
  "workbench.preferredHighContrastColorTheme": "Catppuccin Frappé",
  "workbench.preferredDarkColorTheme": "Catppuccin Frappé",
  "workbench.settings.applyToAllProfiles": ["workbench.colorCustomizations"],

  //extension doki-theme
  "doki.statusbar.name": "Ryuu43",
  "doki.sticker.css": "display: none !important;",
  "doki.background.anchor": "display: none !important;",
  "doki.wallpaper.enabled": false,

  //basic vscode tweaks
  "explorer.confirmDelete": false,
  "editor.minimap.enabled": false,
  "editor.inlayHints.padding": true,
  "editor.indentSize": 2,
  "editor.guides.indentation": false,
  "editor.padding.top": 6,
  "editor.inlayHints.enabled": "off",
  "editor.roundedSelection": true,
  "workbench.sideBar.location": "right",
  "diffEditor.ignoreTrimWhitespace": false,
  "window.customTitleBarVisibility": "never",
  "editor.cursorWidth": 3,
  "editor.accessibilitySupport": "off",
  "terminal.integrated.cursorBlinking": true,
  "errorLens.followCursor": "closestProblem",
  "editor.glyphMargin": false,
  "scm.diffDecorations": "none",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.scrollbar.verticalScrollbarSize": 9,
  "editor.scrollbar.vertical": "visible",
  "editor.scrollbar.horizontalScrollbarSize": 9,
  "editor.smoothScrolling": true,
  "vsicons.dontShowNewVersionMessage": true,
  "workbench.activityBar.location": "hidden",
  "editor.minimap.renderCharacters": false,
  "color-highlight.markRuler": false,
  "editor.stickyScroll.enabled": false,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.enabled": true,
  "window.titleBarStyle": "native",

  //terminal custom
  "terminal.integrated.fontFamily": "Dank Mono, JetBrainsMono Nerd Font",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.hideOnStartup": "always",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.letterSpacing": 1,
  "terminal.integrated.lineHeight": 1.5,
  "terminal.integrated.env.windows": {},
  "workbench.panel.opensMaximized": "always",

  //disable welcome screen and hide menuBar
  "window.menuBarVisibility": "toggle",
  "workbench.startupEditor": "none",

  //apc customize ui++
  "apc.electron": {
    "frame": true,
    "vibrancy": "ultra-dark",
    "titleBarStyle": "hidden",
    "visualEffectState": "active",
    "trafficLightPosition": {
      "x": 15,
      "y": 13
    }
  },
  "apc.menubar.compact": true,
  "apc.sidebar.titlebar": {
    "fontSize": 13
  },
  "apc.stylesheet": {
    ".monaco-hover-content": "display: flex; flex-direction: column;",
    ".monaco-hover-content .hover-row.markdown-hover": "display: block; order: 2;",
    ".monaco-hover-content .hover-row.markdown-hover:has(.rendered-markdown > p)": "order: 1; border-bottom: 1px dashed #4F5254; margin-bottom:6px;",
    ".editor .decorationsOverviewRuler": "opacity: 70%; !importance",
    "div.visible.scrollbar.vertical .slider": "border-radius: 10px !important; left: -4px !important;",
    "div.visible.scrollbar.horizontal .slider": "border-radius: 10px !important; top: -4px !important;",
    ".explorer-folders-view .explorer-item::after": "line-height: 18px !important;",
    ".explorer-folders-view .monaco-list-row": "padding-left: 0 !important;",
    ".basepanel .title": "height: 30px !important;",
    ".basepanel .title .monaco-action-bar": "height: 30px !important;",
    ".basepanel .title .title-actions": "height: 30px !important;",
    ".monaco-breadcrumbs": "font-size: 12px; transform: translateY(0px);",
    ".activitybar .content .actions-container": "padding-left:1px;",
    ".activitybar .content .badge .badge-content": "height: 8px!important; width: 8px!important; padding:0!important; top:2px!important; color: transparent!important;",
    ".custom-sidebar-titlebar .sidebar .composite.title": "padding-left: 0;",
    ".custom-sidebar-titlebar .sidebar .composite.title .inline-titlebar-placeholder": "padding-left: 0 !important;",
    ".monaco-workbench .part.statusbar>.items-container>.statusbar-item.left.first-visible-item": "padding-left: 0;",
    ".monaco-workbench .part.sidebar .title-actions .actions-container": "justify-content: space-evenly !important;",
    ".sidebar .title-label h2": "line-height: 2 !important;",
    ".monaco-editor .scroll-decoration": "display: none !important;",
    ".monaco-scrollable-element > shadow.top": "display: none !important;",
    ".monaco-split-view2 > .monaco-scrollable-element > .split-view-container": "background: #313445 !important;",
    "*": "font-Family: Dank Mono, monospace;",
    ".tab, .titlebar": "border: none!important;",
    ".monaco-button-dropdown-separator": "background-color: transparent!important;",
    ".title-actions": "display: none !important;",
    ".editor .title": "background: transparent !important;",
    "actions-container.highlight-toggled": "display: none !important;",
    ".editor .title .actions-container": "flex-direction: row-reverse;",
    ".editor .scrollbar .slider": "visibility: hidden;",
    ".editor .scrollbar:hover .slider": "visibility: initial;",
    ".sidebar": "border: none !important;",
    ".monaco-editor .cursor": "background-image: linear-gradient(135deg, #67D0FF 10%, #C45DFF 100%) ; box-shadow: 0 0 42px 5px #C45DFF, #C45DFF 0px 0px 34px 1px; color: #C45DFF !important;",
    ".explorer .slider": "visibility: hidden;",
    "quick-input-list-row div": "display: flex !important; align-items: center !important;"
  },
  "animations.Install-Method": "Apc Customize UI++",
  "apc.imports": [
    "file:///c:/Users/Admin/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.3/dist/updateHandler.js"
  ],
  "editor.wordWrap": "on",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.codeLensFontFamily": "Dank Mono"
}
